                        HorizontalOptions="Center"
                         Spacing="30
                         " Padding="0" >

                <Grid
                    HeightRequest="60"
                  HorizontalOptions="Center"
                      WidthRequest="160" Padding="0,20,0,0"
                  >
                    <Button BorderRadius="5"
                       HeightRequest="5"
                        BorderWidth="1"
                            
                x:Name="ShopIDSubmit1"
                        TextColor="Black"
                    BorderColor="#D9D9D9"
               BackgroundColor="#89AC8E"
                         Clicked="ShopIDSubmit1_Clicked"
                      
                        Text="Engineering" FontFamily="Regular" FontAttributes="Bold" Padding="0">
