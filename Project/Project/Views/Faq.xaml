                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label 
        Grid.Row="0" Grid.Column="0" 
                        HorizontalOptions="Center"
        Text="Is it IOS, Android Software or both? "



                        FontFamily="Regular" FontAttributes="Bold"
                           TextColor="Black"
        />
