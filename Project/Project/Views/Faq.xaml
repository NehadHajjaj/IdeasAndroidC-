                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                       

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label 
        Grid.Row="0" Grid.Column="0" 
                        HorizontalOptions="Center"
        Text="Can I contact the group members?"


                      FontFamily="Regular" FontAttributes="Bold"
                           TextColor="Black"
        />
                    <Label 
        Grid.Row="1" Grid.Column="0" 
        Text="-Yes you can."
                         HorizontalOptions="Center"
                        FontFamily="Regular" FontAttributes="Bold"
                           TextColor="Black"
        />
                   


                </Grid>
                <Grid
                     HeightRequest="80"
                  HorizontalOptions="Center"
                      WidthRequest="350"
                      BackgroundColor="#E3ECE5">
                    <Grid.RowDefinitions>
